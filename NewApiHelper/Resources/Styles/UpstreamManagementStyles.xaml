<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="TextBlock" x:Key="FormLabelStyle">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#FF2E3B52"/>
        <Setter Property="Margin" Value="0,12,0,4"/>
    </Style>
    <Style TargetType="TextBox" x:Key="FormTextBoxStyle">
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderBrush" Value="#FFD0D0D0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    <Style TargetType="Button" x:Key="ActionButtonStyle">
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="Background" Value="#FF4A90E2"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF68AFFF"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="#FFB0B0B0"/>
                <Setter Property="Foreground" Value="#FF808080"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Button" x:Key="SecondaryButtonStyle" BasedOn="{StaticResource ActionButtonStyle}">
        <Setter Property="Background" Value="#FF6C757D"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF868E96"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Button" x:Key="DangerButtonStyle" BasedOn="{StaticResource ActionButtonStyle}">
        <Setter Property="Background" Value="#FFDC3545"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FFC82333"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
</ResourceDictionary>