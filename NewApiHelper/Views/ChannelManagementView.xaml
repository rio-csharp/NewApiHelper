<UserControl x:Class="NewApiHelper.Views.ChannelManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:NewApiHelper.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="FormLabelStyle">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#FF2E3B52" />
            <Setter Property="Margin" Value="0,12,0,4" />
        </Style>
        <Style TargetType="TextBox" x:Key="FormTextBoxStyle">
            <Setter Property="Padding" Value="8" />
            <Setter Property="BorderBrush" Value="#FFD0D0D0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="Background" Value="#FF4A90E2" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="0,0,8,0" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF68AFFF" />
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FFB0B0B0" />
                    <Setter Property="Foreground" Value="#FF808080" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="SecondaryButtonStyle" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FF6C757D" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF868E96" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button" x:Key="DangerButtonStyle" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#FFDC3545" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFC82333" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <!-- 全局加载指示器 -->
        <ProgressBar IsIndeterminate="True" VerticalAlignment="Top" Height="4"
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <DockPanel>

            <!-- 侧边栏布局：左侧渠道列表，右侧详情编辑 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- 左侧：渠道列表 -->
                <Grid Grid.Row="0" Grid.Column="0" Background="#FFF8F9FA">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Row="0" Margin="12,12,12,8">
                        <TextBlock DockPanel.Dock="Left" Text="渠道列表" FontSize="16" FontWeight="Bold" Foreground="#FF2E3B52" VerticalAlignment="Center" />
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                            <Button Command="{Binding AddChannelCommand}" Width="28" Height="28" VerticalAlignment="Center"
                                    Background="Transparent" BorderThickness="0" ToolTip="新增渠道" Margin="0,0,4,0">
                                <Path Stroke="#FF2E3B52" StrokeThickness="2" Data="M10,4 L10,16 M4,10 L16,10" />
                            </Button>
                            <Button Command="{Binding DeleteAllChannelsCommand}" Width="28" Height="28" VerticalAlignment="Center"
                                    Background="Transparent" BorderThickness="0" ToolTip="删除所有渠道" Margin="0,0,4,0">
                                <TextBlock Text="🗑️" FontSize="16" />
                            </Button>
                            <Button Command="{Binding ImportChannelsCommand}" Width="28" Height="28" VerticalAlignment="Center"
                                    Background="Transparent" BorderThickness="0" ToolTip="导入渠道">
                                <TextBlock Text="📥" FontSize="16" />
                            </Button>
                        </StackPanel>
                    </DockPanel>
                    <ListView Grid.Row="1" ItemsSource="{Binding Channels}" SelectedItem="{Binding SelectedChannel, Mode=TwoWay}" Margin="6"
                              IsSynchronizedWithCurrentItem="True" Background="Transparent" BorderThickness="0">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="6,2" />
                                <Setter Property="Padding" Value="8" />
                                <Setter Property="Background" Value="White" />
                                <Setter Property="BorderBrush" Value="#FFE0E0E0" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#FFE6F7FF" />
                                        <Setter Property="BorderBrush" Value="#FF4A90E2" />
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFF0F8FF" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.ItemContainerStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="#FF2E3B52" />
                                        <TextBlock Text="{Binding Group}" FontSize="12" Foreground="Gray" Margin="0,2,0,0" />
                                        <TextBlock Text="{Binding StatusText}" FontSize="11" Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}" Margin="0,2,0,0" />
                                        <TextBlock Text="新" Foreground="White" Background="#FF3BA1FF" Margin="0,4,0,0" Padding="6,2" FontSize="10" FontWeight="Bold" Visibility="{Binding IsNew, Converter={StaticResource BooleanToVisibilityConverter}}" HorizontalAlignment="Left" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                </Grid>

                <!-- 右侧：详情/编辑面板，使用 ContentControl 绑定 SelectedChannel -->
                <ContentControl Grid.Row="0" Grid.Column="1" Content="{Binding SelectedChannel}" Margin="12">
                    <ContentControl.ContentTemplate>
                        <DataTemplate DataType="{x:Type vm:ChannelItemViewModel}">
                            <Border BorderBrush="#FFE0E0E0" BorderThickness="1" CornerRadius="8" Padding="20" Background="White">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <StackPanel>
                                        <TextBlock Text="渠道详情" FontSize="18" FontWeight="Bold" Foreground="#FF2E3B52" Margin="0,0,0,16" />
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                            <Button Content="🔄 刷新" Command="{Binding DataContext.LoadChannelsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource SecondaryButtonStyle}" />
                                            <Button Content="📋 复制" Command="{Binding DataContext.CopyChannelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource ActionButtonStyle}" ToolTip="复制当前选中渠道" />
                                            <Button Content="✏️ 编辑" Command="{Binding DataContext.StartEditChannelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource ActionButtonStyle}" ToolTip="选择一个渠道以启用编辑" />
                                            <Button Content="🗑️ 删除" Command="{Binding DataContext.DeleteChannelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource DangerButtonStyle}" ToolTip="删除当前选中渠道" />
                                            <Button Content="🧪 测试" Command="{Binding DataContext.TestChannelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource SecondaryButtonStyle}" ToolTip="测试当前选中渠道" />
                                            <Button Content="💾 保存" Command="{Binding DataContext.SaveChannelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource ActionButtonStyle}" />
                                            <Button Content="❌ 取消" Command="{Binding DataContext.CancelEditCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource SecondaryButtonStyle}" />
                                        </StackPanel>

                                        <Grid Margin="0,0,0,16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Margin="0,0,12,0">
                                                <TextBlock Text="名称" Style="{StaticResource FormLabelStyle}" />
                                                <TextBox Text="{Binding Name, Mode=TwoWay}" IsEnabled="{Binding IsEditing}" Style="{StaticResource FormTextBoxStyle}" />

                                                <TextBlock Text="Base URL" Style="{StaticResource FormLabelStyle}" />
                                                <TextBox Text="{Binding BaseUrl, Mode=TwoWay}" IsEnabled="{Binding IsEditing}" Style="{StaticResource FormTextBoxStyle}" />

                                                <TextBlock Text="Key" Style="{StaticResource FormLabelStyle}" />
                                                <TextBox Text="{Binding Key, Mode=TwoWay}" IsEnabled="{Binding IsEditing}" Style="{StaticResource FormTextBoxStyle}" />

                                                <TextBlock Text="分组" Style="{StaticResource FormLabelStyle}" />
                                                <TextBox Text="{Binding Group, Mode=TwoWay}" IsEnabled="{Binding IsEditing}" Style="{StaticResource FormTextBoxStyle}" />
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="优先级" Style="{StaticResource FormLabelStyle}" />
                                                <TextBox Text="{Binding Priority, Mode=TwoWay}" IsEnabled="{Binding IsEditing}" Style="{StaticResource FormTextBoxStyle}" />

                                                <TextBlock Text="权重" Style="{StaticResource FormLabelStyle}" />
                                                <TextBox Text="{Binding Weight, Mode=TwoWay}" IsEnabled="{Binding IsEditing}" Style="{StaticResource FormTextBoxStyle}" />

                                                <TextBlock Text="状态" Style="{StaticResource FormLabelStyle}" />
                                                <TextBlock Text="{Binding StatusText}" FontSize="14" Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}" Margin="0,0,0,8" />
                                            </StackPanel>
                                        </Grid>

                                        <TextBlock Text="Models" Style="{StaticResource FormLabelStyle}" />
                                        <ItemsControl ItemsSource="{Binding ModelsList}" Margin="0,4,0,8">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#FFF8F9FA" BorderBrush="#FFE0E0E0" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,2">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding}" FontSize="14" VerticalAlignment="Center" />
                                                            <Button Content="🗑️" Command="{Binding DataContext.RemoveModelFromSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" Margin="8,0,0,0" Visibility="{Binding DataContext.SelectedChannel.IsEditing, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}" IsEnabled="{Binding DataContext.SelectedChannel.IsEditing, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource DangerButtonStyle}" Padding="6" FontSize="12" />
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0" Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBox x:Name="NewModelTextBox" Width="200" IsEnabled="{Binding IsEditing}" Text="{Binding DataContext.NewModelText, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" Style="{StaticResource FormTextBoxStyle}" Margin="0" />
                                            <Button Content="➕ 添加" Command="{Binding DataContext.AddModelToSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding DataContext.NewModelText, RelativeSource={RelativeSource AncestorType=UserControl}}" Margin="8,0,0,0" IsEnabled="{Binding DataContext.SelectedChannel.IsEditing, RelativeSource={RelativeSource AncestorType=UserControl}}" Style="{StaticResource ActionButtonStyle}" Padding="12,6" />
                                        </StackPanel>

                                        <TextBlock Text="Model Mapping" Style="{StaticResource FormLabelStyle}" />
                                        <TextBox Text="{Binding ModelMapping, Mode=TwoWay}" IsEnabled="{Binding IsEditing}" Style="{StaticResource FormTextBoxStyle}" TextWrapping="Wrap" AcceptsReturn="True" Height="80" />
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>