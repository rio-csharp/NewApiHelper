<UserControl x:Class="NewApiHelper.Views.ModelSyncView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:NewApiHelper.Converters"
             xmlns:models="clr-namespace:NewApiHelper.Models"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:QuotaTypeToStringConverter x:Key="QuotaTypeConverter" />
        <converters:TestResultStatusToStringConverter x:Key="StatusConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- 菜单栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="刷新" Command="{Binding RefreshCommand}" Margin="0,0,10,0" Background="#4CAF50" Foreground="White" FontWeight="Bold" Padding="10,5" BorderThickness="0" />
            <Button Content="导入" Command="{Binding ImportCommand}" Background="#2196F3" Foreground="White" FontWeight="Bold" Padding="10,5" BorderThickness="0" Margin="0,0,10,0" />
            <Button Content="测试" Command="{Binding TestCommand}" IsEnabled="{Binding !IsTesting}" Background="#FF5722" Foreground="White" FontWeight="Bold" Padding="10,5" BorderThickness="0" Margin="0,0,10,0" />
            <Button Content="测试失败" Command="{Binding TestFailedCommand}" IsEnabled="{Binding !IsTesting}" Background="#9C27B0" Foreground="White" FontWeight="Bold" Padding="10,5" BorderThickness="0" Margin="0,0,10,0" />
            <TextBlock Text="{Binding TestStatus}" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Red" FontWeight="Bold" />
            <TextBlock Text="上游：" VerticalAlignment="Center" Margin="0,0,5,0" />
            <ComboBox ItemsSource="{Binding Upstreams}" SelectedItem="{Binding SelectedUpstream}" DisplayMemberPath="Name" Width="150" Margin="0,0,10,0" />
            <TextBlock Text="上游组：" VerticalAlignment="Center" Margin="0,0,5,0" />
            <ComboBox ItemsSource="{Binding FilteredUpstreamGroups}" SelectedItem="{Binding SelectedUpstreamGroup}" DisplayMemberPath="Name" Width="150" Margin="0,0,10,0" />
            <TextBlock Text="测试结果：" VerticalAlignment="Center" Margin="0,0,5,0" />
            <ComboBox ItemsSource="{Binding TestResultStatusOptions}" SelectedIndex="{Binding SelectedTestResultIndex}" Width="100" Margin="0,0,10,0" />
            <TextBlock Text="搜索：" VerticalAlignment="Center" Margin="0,0,5,0" />
            <TextBox x:Name="SearchTextBox" Text="{Binding SearchText}" Width="200" Margin="0,0,10,0" PreviewKeyDown="SearchTextBox_PreviewKeyDown" />
            <Button Content="搜索" Command="{Binding SearchCommand}" Background="#FF9800" Foreground="White" FontWeight="Bold" Padding="10,5" BorderThickness="0" Margin="0,0,5,0" />
            <Button Content="精确搜索" Command="{Binding ExactSearchCommand}" Background="#FF9800" Foreground="White" FontWeight="Bold" Padding="10,5" BorderThickness="0" />
        </StackPanel>

        <!-- 表格 -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding FilteredItems}" SelectionMode="Extended" SelectionChanged="DataGrid_SelectionChanged" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding LatestTestResult}" Value="{x:Static models:TestResultStatus.Untested}">
                            <Setter Property="Background" Value="White" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding LatestTestResult}" Value="{x:Static models:TestResultStatus.Skipped}">
                            <Setter Property="Background" Value="Gainsboro" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding LatestTestResult}" Value="{x:Static models:TestResultStatus.Success}">
                            <Setter Property="Background" Value="Honeydew" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding LatestTestResult}" Value="{x:Static models:TestResultStatus.Failed}">
                            <Setter Property="Background" Value="MistyRose" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                <DataGridTextColumn Header="名称" Binding="{Binding Name}" Width="150" />
                <DataGridTextColumn Header="比例" Binding="{Binding Ratio}" Width="100" />
                <DataGridTextColumn Header="价格" Binding="{Binding Price}" Width="100" />
                <DataGridTextColumn Header="补全比例" Binding="{Binding CompletionRatio}" Width="100" />
                <DataGridTextColumn Header="配额类型" Binding="{Binding QuotaType, Converter={StaticResource QuotaTypeConverter}}" Width="100" />
                <DataGridTextColumn Header="上游" Binding="{Binding Upstream.Name}" Width="150" />
                <DataGridTextColumn Header="上游倍率" Binding="{Binding Upstream.UpstreamRatio}" Width="100" />
                <DataGridTextColumn Header="上游组" Binding="{Binding UpstreamGroup.Name}" Width="150" />
                <DataGridTextColumn Header="上游组倍率" Binding="{Binding UpstreamGroup.GroupRatio}" Width="100" />
                <DataGridTextColumn Header="补全价格" Binding="{Binding CompletionPrice}" Width="100" />
                <DataGridTextColumn Header="最终价格" Binding="{Binding FinalPrice}" Width="100" />
                <DataGridTextColumn Header="最新测试结果" Binding="{Binding LatestTestResult, Converter={StaticResource StatusConverter}}" Width="120" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>